<section class="product-card">
    <div class="card">
        {{#with data.products}}
        {{#if isEmpty}}
        <mark>Пустий</mark>
        {{else}}
        <ul>
            {{#each list}}
            <li>{{name}} | {{price}} | {{id}} <a href="/product-edit?id={{id}}">(видалити)</a></li>
            {{/each}}
        </ul>
        {{/if}}
        {{/with}}
    </div>
</section>